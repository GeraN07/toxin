mixin  masked-text-field(h3,p,placeholder,addClass)
    .masked-text-field-block
        .masked-text-field-block__header(class=addClass)  
            h3.masked-text-field-block__title=h3
        input.masked-text-field-block__masked-text-field(
            type="text"
            name="field-name"
            placeholder=placeholder
            data-mask="00.00.0000")