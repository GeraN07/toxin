mixin form-elements    
    section.form-elements
        .block-1
            +text-field("text field","default","email","text", "Email","","default")
            +text-field("text field","Hover / Focus","email","text", "Email","This is pretty awesome","hover")
            +dropdown({type:'empty'},"Dropdown","Default")
            +masked-text-field("masked text field","Default","ДД.ММ.ГГГГ","default")
            +double-date-dropdown("date Dropdown","date Dropdown","ДД.ММ.ГГГГ","19.08.2019")
            +filter-date-dropdown("filter date dropdown")
            +subscription-text-field("subscription text field")
        .block-2
            +checkbox-buttons("Checkbox Buttons")
            +radio("Radio Buttons")
            .toggle-block
                h3.toggle-title toggle
                +toggle("Toggle","checked","get1")
                +toggle(none,none,"get2")
            h3.like-button-title like button
            .like-button-block
                +like-button("like button","like__btn1 animated","2")
                +like-button(none,"like__btn2 animated liked","12")
            h3.rate-button-title rate button
            .rate-button-block
                +rate-button("rating4","rate button")
                +rate-button("rating5")
        .block-3
            +range-slider("Range Slider")
            h3.buttons-title buttons
            .buttons
                .buttons-purpule
                    +button-purpule("click me")
                    +button-purpule("click me","hover")
                .buttons-white
                    +button-white("click me")
                    +button-white("click me","hover")
                .buttons-form
                    +button-submit("click me")
                    +button-clear("click me")
                    .buttons-form__button-purpule
                        +button-purpule-large("перейти к оплате")
                    +pagination("pagination")
        .block-4
            +dropdown({type:'rooms'},"dropdown","default","","minwidth")
            +dropdown({type:'rooms'},"dropdown","expanded","menu-open","minwidth")
        .block-5
            +dropdown({type:'guests'},"dropdown","","menu-open")
        .block-6
            +dropdown({type:'guests'},"dropdown","","menu-open")
        .block-7
            +expandable-checkbox-list('expandable checkbox list','',true)
            +expandable-checkbox-list('expandable checkbox list','active')
        .block-8
            +rich-checkbox-buttons('rich Checkbox Buttons')
        .block-9
            +bullet-list("Bullet List")
        .block-10
            +features('insert_emoticon','Комфорт','Шумопоглощающие стены')
            +features('location_city','Удобство','Окно в каждой из спален')
        .block-11
            +feedback("Мурад Сарафанов","5 дней назад","Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.","src/components/feedback/author-1.jpg")