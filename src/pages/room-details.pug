include ../components/header-main/header-main
include ../cards/booking-card/booking-card
include ../components/features/features
include ../components/feedback/feedback
include ../components/bullet-list/bullet-list
include ../components/big-footer/big-footer
   
doctype html
html(lang="en")
        head
            meta(charset="UTF-8")
            meta(name="viewport", content="width=device-width, initial-scale=1.0")
            title Document
        body.rooms-details
            +page-header(false)
            main.rooms-details__block
                section.room-details__room-image
                    img.room-image__image-main(src="src/assets/rooms-image/room-image1.jpg"   alt="")
                    .room-image__image-small-block
                        img.room-image__image-small1(src="src/assets/rooms-image/room-image2.jpg"  alt="")
                        img.room-image__image-small2(src="src/assets/rooms-image/room-image3.jpg"  alt="")
                section.room-details__details-book
                    .details-book__room-details
                        .room-details__features-block
                            h1.features-block__features-title Сведения о номере
                            +features("insert_emoticon","Комфорт","Шумопоглощающие стены")
                            +features("location_city","Удобство","Окно в каждой из спален")
                            +features("whatshot","Уют","Номер оснащён камином")
                        .room-details__room-impressions
                            h1.room-impressions__impressions-title Впечатления от номера
                            .room-impressions__impressions-block
                                <figure class="chart" data-percent="100">
                                    <svg width="120" height="121">
                                        <g transform="scale(-1, 1), rotate(-90)">
                                            <circle class="outer2" cx="-60" cy="-60" r="58" />
                                            <circle class="outer1" cx="-60" cy="-60" r="58" />
                                            <circle class="outer" cx="-60" cy="-60" r="58" />
                                        </g>
                                    </svg>
                                    <p class="vote-count"><span class="vote-count__number" id="nbr">260</span> <span class="vote-count__text">голосов</span></p>
                                </figure>
                                .room-impressions__room-impression-block
                                    ul.room-impressions__impressions-list
                                        li.impressions-list__impression-item1 
                                            p.impressions-list__text Великолепно
                                        li.impressions-list__impression-item2 
                                            p.impressions-list__text Хорошо
                                        li.impressions-list__impression-item3 
                                            p.impressions-list__text Удовлетворительно
                                        li.impressions-list__impression-item4 
                                            p.impressions-list__text Разочарован
                        .room-details__room-feedbacks
                            .room-feedbacks__feedback-header
                                h1.room-feedback__feedbacks-title Отзывы посетителей номера
                                p.room-feedback__feedbacks-count 2 отзыва
                            +feedback("Мурад Сарафанов","5 дней назад","Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.")
                            +feedback("Патрисия Стёклышкова","Неделю назад","Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент")
                        .room-details__room-rules
                            h1.room-rules__rules-title Правила
                            +bullet-list
                        .room-details__book-cancel
                            h1.room-rules__book-cancel-title Отмена
                            p.room-rule__book-cancel-text Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
                    .details-book__room-book
                        +booking-card
            +big-footer

                    

